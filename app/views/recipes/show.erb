<div class ="menu-nav">
  <ul>
    <li><a href="/recipes">Home</a></li>
    <li><a href="/recipes/new">Create Recipe</a></li>
    <li><a href='/logout'>Logout</a></li>
  </ul
</div>

<br />

<div class="recipe-show">
  <div class="recipe-show-header">
    <h1><%= @recipe.name %><br>
    </h1>
    <div class="recipe-show-text-container">
      <strong>Ingredients</strong>
      <br />
      <%= @recipe.ingredients %><br>
    </div>
    <div class="recipe-show-header-text-container">
      <strong>Cook Time</strong>
      <br />
      <%= @recipe.cook_time %> minutes
    </div>
  </div>
  <div class="recipe-show-directions">
    <h2>Directions</h2>
    <div class="recipe-show-directions-text">
      <ol>
      <% @recipe.directions.split(',').each do |x| %>
        <li><%= x %></li><br />
      <% end %>
      </ol>
    </div>
  </div>
  <div class="recipe-show-buttons">
    <% if logged_in? && @recipe.user_id == current_user.id %>
      <form action="/recipes/<%= @recipe.id %>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button class="delete-button" type="submit" onclick="return confirm('Are you sure you want to delete this recipe?')" value="delete">Delete</button>
      </form>
    <% end %>
    <% if logged_in? && @recipe.user_id == current_user.id %>
      <a href="/recipes/<%= @recipe.id %>/edit">
        <button class="btn btn-outline-primary">Edit Recipe</button>
      </a>
    <% end %>
  </div>
</div>
